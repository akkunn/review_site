<div class="background-blue">
  <div class="result">
    < <%= link_to '検索画面に戻る', root_path %>

    <%= sort_link(
      @q, :review_ave_score, "口コミ評価順"
    ) %>
    |
    <%= sort_link(
      @q, :review_count, "口コミ数順"
    ) %>
    <table>
      <tr>
        <th>順位</th>
        <th>スクール名</th>
        <th>口コミ評価</th>
        <th>口コミ数</th>
      </tr>

      <% @schools.each.with_index(1) do |school, i| %>
        <tr>
          <td><%= i %></td>
          <td><%= link_to school.name, school_path(school)  %></td>

          <% if school.review_ave_score == nil %>
            <td>なし</td>
          <% else %>
            <td><%= school.review_ave_score %>点</td>
          <% end %>

          <% if school.review_count == nil %>
            <td>0</td>
          <% else %>
            <td><%= school.review_count %></td>
          <% end %>
        </tr>
      <% end %>
    </table>
    <%= link_to "登録", new_school_path %>
  </div>
</div>
