<%= provide(:title, "#{@review.school.name}の口コミ詳細")%>
<div class="review-show background-blue">
  <%= render partial: 'review_show_page_link', locals: { params: @params, review: @review } %>
  <%= render 'shared/flash_message' %>
  <%= render partial: 'review_show_review_box', locals: { params: @params, review: @review } %>
</div>


<script>
  window.addEventListener("turbolinks:load", function(){
    $('#curriculum-star-rate').empty();

    $('#curriculum-star-rate').raty({
      size      : 36,
      starOff   : '<%= asset_path('star-off.png') %>',
      starOn    : '<%= asset_path('star-on.png') %>',
      starHalf: '<%= asset_path('star-half.png') %>',
      half      : true,
      readOnly: true,
      score: '<%= @review.curriculum_star %>'
    });
  });
</script>

