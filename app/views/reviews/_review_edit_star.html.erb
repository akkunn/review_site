        starOn    : '<%= asset_path('star-on.png') %>',
        starHalf: '<%= asset_path('star-half.png') %>',
        half      : true,
        score: '<%= review.curriculum_star %>',
        scoreName: 'review[curriculum_star]'
      })
    })
  }
</script>
