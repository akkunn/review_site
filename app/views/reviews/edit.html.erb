<div class="review-edit background-blue">
  <div class="review-box">
    <div class="review-box-content">
      <h2>口コミ編集</h2>
      <%= form_with model: @review, local: true do |f| %>

        <div class="review-show-border">
          <ul class="flex">
            <li><%= f.label :school_id, "スクール名" %></li>
            <li class="review-name-label"><%= f.collection_select(:school_id, School.all, :id, :name, include_blank: '選択してください') %></li>
          </ul>
        </div>

        <div class="review-show-border">
          <ul class="flex">
            <li><%= f.label :name, "口コミタイトル" %></li>
            <li><%= f.text_field :name, placeholder: "口コミタイトルを入力" %></li>
          </ul>
        </div>

        <div class="review-show-border">
          <ul>
            <%= f.hidden_field :curriculum_star, id: "curriculum-star" %>
            <div class="flex">
              <li><%= f.label :curriculum_star,'カリキュラム内容' %></li>
              <li id="curriculum_star"></li>
            </div>
            <li><%= f.text_area :curriculum %></li>
          </ul>
        </div>

        <div class="review-show-border">
          <ul>
            <%= f.hidden_field :support_star, id: "support-star" %>
            <div class="flex">
              <li><%= f.label :support_star,'サポート体制' %></li>
              <li id="support_star"></li>
            </div>
            <li><%= f.text_area :support %></li>
          </ul>
        </div>

        <div class="review-show-border">
          <ul>
            <%= f.hidden_field :teacher_star, id: "teacher-star" %>
            <div class="flex">
              <li><%= f.label :teacher_star,'講師' %></li>
              <li id="teacher_star"></li>
            </div>
            <li><%= f.text_area :teacher %></li>
          </ul>
        </div>

        <div class="review-show-border">
          <ul>
            <%= f.hidden_field :compatibility_star, id: "compatibility-star" %>
            <div class="flex">
              <li><%= f.label :compatibility_star, '両立しやすさ' %></li>
              <li id="compatibility_star"></li>
            </div>
            <li><%= f.text_area :compatibility %></li>
          </ul>
        </div>


          <ul>
            <li><%= f.label :thought,'感想/アドバイス' %></li>
            <li><%= f.text_area :thought %></li>
          </ul>


        <%= f.hidden_field :user_id, value: current_user.id, id: "user-id"  %>

        <div class="review-edit-submit">
          <%= f.submit '変更する', class: "submit-button" %>
          <%= link_to "戻る", review_path(@review), class: "button" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<!-- 評価javascript -->
<script>
  window.addEventListener("turbolinks:load", function(){
    $('#curriculum_star').empty();

    $('#curriculum_star').raty({
      size      : 36,
      starOff   : '<%= asset_path('star-off.png') %>',
      starOn    : '<%= asset_path('star-on.png') %>',
      starHalf: '<%= asset_path('star-half.png') %>',
      half      : true,
      score: <%= @review.curriculum_star %>
    });
  });
</script>

