<h1>プロフィール</h1>
<div class="user-box">
  <h1 class="user-name">
    <%= @user.name %>
  </h1>
  <h2>
    <% @user.schools.each do |school| %>
      <p>
        <%= school.name %>
      </p>
    <% end %>
  </h2>
  <div class="introduction">
    <%= @user.introduction %>
  </div>
</div>
<%= link_to "変更する", edit_user_path(@user), class: "button" %>
