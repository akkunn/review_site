<div class="question-index background-blue">
  <div class="question-index-content">
    <h2>質問一覧</h2>
    <h2><%= @questions.first.school.name %></h2>

    <% @questions.each do |question| %>
      <ul>
        <li><%= link_to question.name, question_path(question) %></li>
        <div class="flex">
          <li><%= image_tag src='70b3dd52350bf605f1bb4078ef79c9b9.png', class: "user-icon", alt: "ユーザーアイコン" %></li>
          <li><%= question.user.name %></li>
          <li><%= question.updated_at.to_s(:datetime_jp) %></li>
        </div>
      </ul>
    <% end %>
  </div>
</div>
