<%= render 'shared/flash_message' %>
<div class="edit-acount-info">
  <ul class="link-box">
    <li><%= link_to "プロフィール編集", edit_user_path(current_user), class: "link" %></li>
    <li class="current-page"><%= link_to "アカウント情報編集", "#", class: "blue-link" %></li>
  </ul>
  <div class="background">
    <div class="box devise-user-box">
      <h2>アカウント情報編集</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <div class="label"><%= f.label :email, "メールアドレス" %></div>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field">
          <div class="label">
            <%= f.label :password, "新しいパスワード" %>
            <p class="under-label-text">(変更する場合のみ入力)</p>
          </div>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "6文字以上" %>
        </div>

        <div class="field">
          <div class="label"><%= f.label :password_confirmation, "パスワード確認" %></div>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <div class="label">
            <%= f.label :current_password, "現在のパスワード" %>
            <p class="under-label-text">(変更する場合のみ入力)</p>
          </div>
          <%= f.password_field :current_password, autocomplete: "current-password" %>
        </div>

        <div class="actions">
          <%= f.submit "更新" %>
        </div>
      <% end %>

      <%= link_to "戻る", :back, class: "button" %>
      <%= link_to "アカウント削除", registration_path(resource_name), data: { confirm: "削除しますか?" }, method: :delete, class: "delete-user" %>

    </div>
  </div>
</div>
