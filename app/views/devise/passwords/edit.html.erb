<div class="background">
  <div class="box devise-user-box">
    <h2>パスワード再設定</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field">
        <div class="label"><%= f.label :password, "新しいパスワード" %></div>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "新しいパスワード" %>
      </div>

      <div class="field">
        <div class="label"><%= f.label :password_confirmation, "パスワード確認" %></div>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード確認" %>
      </div>

      <div class="actions">
        <%= f.submit "パスワードを再設定する" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
