<%= render 'shared/flash_message' %>
<div class="background sign-in">
  <div class="box devise-user-box">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <h2>ログイン</h2>
      <div class="field">
        <div class="label"><%= f.label :email, "メールアドレス" %></div>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス" %>
      </div>
      <div class="field">
        <div class="label"><%= f.label :password, "パスワード" %></div>
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="field remember">
          <div><%= f.check_box :remember_me %></div>
          <div class="remember-me"><%= f.label :remember_me, 'ログインを記憶する' %></div>
        </div>
      <% end %>
      <div class="actions">
        <%= f.submit "ログイン" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
    <div class="guest-login">
      <%= link_to 'ゲストログイン', users_guest_sign_in_path, method: :post, class: "button" %>
    </div>
  </div>
</div>
