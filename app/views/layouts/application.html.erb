<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <title><%= full_title(yield(:title)) %></title>
  </head>
  <body>
    <div class="content">
      <div class="header-hidden-menu-background weak-hidden"></div>
      <% if user_signed_in? %>
        <ul class="header-hidden-menu">
          <li class="header-hidden-menu-close"><i class="fa fa-times header-hidden-menu-close-open-button" aria-hidden="true"></i></li>
          <li class="header-hidden-menu-list">
            <%= link_to root_path do %>
              HOME<i class="fa fa-chevron-right" aria-hidden="true"></i>
            <% end %>
          </li>
          <li class="header-hidden-menu-list">
            <%= link_to result_path do %>
              検索<i class="fa fa-chevron-right" aria-hidden="true"></i>
            <% end %>
          </li>
          <li class="header-school">
            <div class="header-dropdown-label header-hidden-menu-list">
              <%= link_to do %>
                スクール<i class="fa fa-chevron-right" aria-hidden="true"></i>
              <% end %>
            </div>
            <ul class="header-dropdown">
              <li class="header-dropdown-list">
                <%= link_to schools_path do %>
                  スクール一覧<i class="fa fa-chevron-right" aria-hidden="true"></i>
                <% end %>
              </li>
              <li class="header-dropdown-list">
                <%= link_to new_school_path do %>
                  スクール追加<i class="fa fa-chevron-right" aria-hidden="true"></i>
                <% end %>
              </li>
            </ul>
          </li>
          <li class="header-hidden-menu-list">
            <%= link_to new_review_path do %>
              口コミ投稿<i class="fa fa-chevron-right" aria-hidden="true"></i>
            <% end %>
          </li>
          <li class="header-user">
            <div class="header-dropdown-label header-hidden-menu-list">
              <%= link_to do %>
                設定<i class="fa fa-chevron-right" aria-hidden="true"></i>
              <% end %>
            </div>
            <ul class="header-dropdown">
              <li class="header-dropdown-list">
                <%= link_to user_path(current_user) do %>
                  プロフィール<i class="fa fa-chevron-right" aria-hidden="true"></i>
                <% end %>
              </li>
              <li class="header-dropdown-list">
                <%= link_to edit_user_path(current_user) do %>
                  プロフィール編集<i class="fa fa-chevron-right" aria-hidden="true"></i>
                <% end %>
              </li>
              <li class="header-dropdown-list">
                <%= link_to edit_user_registration_path do %>
                  アカウント情報編集<i class="fa fa-chevron-right" aria-hidden="true"></i>
                <% end %>
              </li>
            </ul>
          </li>
          <li class="header-hidden-menu-list">
            <%= link_to destroy_user_session_path, method: :delete do %>
              ログアウト<i class="fa fa-chevron-right" aria-hidden="true"></i>
            <% end %>
          </li>
        </ul>
      <% else %>
        <ul class="header-hidden-menu">
          <li class="header-hidden-menu-close"><i class="fa fa-times header-hidden-menu-close-open-button" aria-hidden="true"></i></li>
          <li class="header-hidden-menu-list">
            <%= link_to root_path do %>
              HOME<i class="fa fa-chevron-right" aria-hidden="true"></i>
            <% end %>
          </li>
          <li class="header-school">
            <div class="header-dropdown-label header-hidden-menu-list">
              <%= link_to do %>
                スクール<i class="fa fa-chevron-right" aria-hidden="true"></i>
              <% end %>
            </div>
            <ul class="header-dropdown">
              <li class="header-dropdown-list">
                <%= link_to result_path do %>
                  スクール検索<i class="fa fa-chevron-right" aria-hidden="true"></i>
                <% end %>
              </li>
              <li class="header-dropdown-list">
                <%= link_to schools_path do %>
                  スクール一覧<i class="fa fa-chevron-right" aria-hidden="true"></i>
                <% end %>
              </li>
            </ul>
          </li>
          <li class="header-hidden-menu-list">
            <%= link_to new_user_session_path do %>
              ログイン<i class="fa fa-chevron-right" aria-hidden="true"></i>
            <% end %>
          </li>
          <li class="header-hidden-menu-list">
            <%= link_to new_user_registration_path do %>
              新規登録<i class="fa fa-chevron-right" aria-hidden="true"></i>
            <% end %>
          </li>
        </ul>
      <% end %>
      <header>
        <div class="header-left">
          <%= link_to root_path do %>
            <%= image_tag 'logo.png', class: "logo" %>
          <% end %>
          <%= search_form_for @q, url: result_path do |f| %>
            <%= f.search_field :name_cont, placeholder: 'スクール名で検索' %>
          <% end %>
        </div>
        <% if user_signed_in? %>
          <ul class="header-right header-pc">
            <li><%= link_to "HOME", root_path %></li>
            <li><%= link_to "検索", result_path %></li>
            <li class="header-school">
              <%= link_to "スクール" %>
              <ul class="header-dropdown">
                <li class="header-dropdown-list"><%= link_to "スクール一覧", schools_path %></li>
                <li class="header-dropdown-list"><%= link_to "スクール追加", new_school_path %></li>
              </ul>
            </li>
            <li><%= link_to "口コミ投稿", new_review_path %></li>
            <li class="header-icon">
              <% if current_user.image.attached? %>
                <%= link_to do %>
                  <%= image_tag current_user.image.variant(resize: '100x100!'), class: "user-icon" %>
                <% end %>
              <% else %>
                <%= link_to do %>
                  <%= image_tag src='70b3dd52350bf605f1bb4078ef79c9b9.png', class: "user-icon-default", alt: "ユーザーアイコン" %>
                <% end %>
              <% end %>
              <ul class="header-dropdown">
                <li class="header-dropdown-list"><%= link_to "プロフィール", user_path(current_user) %></li>
                <li class="header-dropdown-list"><%= link_to "プロフィール編集", edit_user_path(current_user) %></li>
                <li class="header-dropdown-list"><%= link_to "アカウント　情報編集", edit_user_registration_path %></li>
                <li class="header-dropdown-list"><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
              </ul>
            </li>
          </ul>
        <% else %>
          <ul class="header-right header-pc">
            <li><%= link_to "HOME", root_path %></li>
            <li class="header-school">
              <%= link_to "スクール" %>
              <ul class="header-dropdown">
                <li class="header-dropdown-list"><%= link_to "スクール検索", result_path %></li>
                <li class="header-dropdown-list"><%= link_to "スクール一覧", schools_path %></li>
              </ul>
            </li>
            <li><%= link_to "ログイン", new_user_session_path %></li>
            <li><%= link_to "新規登録", new_user_registration_path %></li>
            <li class="header-icon header-icon-guest">
              <%= link_to new_user_session_path do %>
                <%= image_tag src='70b3dd52350bf605f1bb4078ef79c9b9.png', class: "user-icon-default", alt: "ユーザーアイコン" %>
              <% end %>
            </li>
          </ul>
        <% end %>
        <div class="header-right header-tab-sp">
          <i id="menu-button" class="fa fa-bars header-hidden-menu-close-open-button" aria-hidden="true"></i>
        </div>
      </header>
      <div class="main-content">
        <%# <p class="notice">= notice</p> %>
        <%# <p class="alert">= alert</p> %>
        <%= yield %>
        <span id="top-btn">
          <a href="#">
            <%= image_tag asset_path('top_btn.png'), class: 'top-btn' %>
          </a>
        </span>
      </div>
      <footer>
        <p>&copy; 2022 プロコミ.</p>
      </footer>
    </div>
    <script src="https://unpkg.com/vue@3.1.5"></script>
  </body>
</html>
