<% if user_signed_in? %>
  <% if current_user.liked_by?(review.id, current_user.id) %>
    <%= link_to destroy_favorite_review_path(review), method: :DELETE, remote: true do %>
      <i class="fa fa-heart on-favorite-review" aria-hidden="true"></i>
    <% end %>
    <%= review.favorite_reviews.count %>
  <% else %>
    <%= link_to create_favorite_review_path(review), method: :POST, remote: true do %>
      <i class="fa fa-heart off-favorite-review" aria-hidden="true"></i>
    <% end %>
    <%= review.favorite_reviews.count %>
  <% end %>
<% else %>
  <%= link_to guest_favorite_review_path do %>
    <i class="fa fa-heart off-favorite-review" aria-hidden="true"></i>
  <% end %>
  <%= review.favorite_reviews.count %>
<% end %>
