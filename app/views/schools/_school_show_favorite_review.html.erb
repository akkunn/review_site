<% if current_user.liked_by?(review.id) %>
  <%= link_to destroy_favorite_review_path(review), method: :DELETE, remote: true do %>
    <i class="fa fa-heart" aria-hidden="true"></i>
  <% end %>
  <%= review.favorite_reviews.count %>
<% else %>
  <%= link_to create_favorite_review_path(review), method: :POST, remote: true do %>
    <i class="fa fa-heart" aria-hidden="true"></i>
  <% end %>
  <%= review.favorite_reviews.count %>
<% end %>
